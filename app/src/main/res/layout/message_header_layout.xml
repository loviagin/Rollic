<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp">

        <ImageButton
            android:id="@+id/bBackMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:minWidth="48dp"
            app:srcCompat="@drawable/fi_rr_back" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatarMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ImageCircle"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/tvNameMessage"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="First and Last name" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

<!--        <ImageButton-->
<!--            android:id="@+id/bCallMessage"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:visibility="invisible"-->
<!--            android:background="@color/transparent"-->
<!--            android:minWidth="48dp" />-->

<!--        <ImageButton-->
<!--            android:id="@+id/bMenuMessage"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:background="@color/transparent"-->
<!--            android:minWidth="48dp"-->
<!--            app:srcCompat="@drawable/fi_rr_menu_dots" />-->

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>