<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    tools:context=".fragments.PhoneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEnterPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ввeдите номер телефона"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etPhoneAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:maxLines="1"
            android:text="+7" />

        <EditText
            android:id="@+id/etCodeAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Код"
            android:visibility="gone"
            android:inputType="textPassword"
            android:maxLength="30"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bSendCodeAuth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Отправить код"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/bConfirmCodeAuth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Подтвердить"
                android:visibility="gone"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/bResendCodeAuth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:backgroundTint="@color/blue50"
                android:text="Переотправить"
                android:textAllCaps="true" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>